#include <bits/stdc++.h>
#define int long long
using namespace std;

int32_t main() {
    int n;
    cin >> n;
    for (int i = 0; i < n; i++) {
        int n, m;
        cin >> n >> m;
        int ans = (min(n, m) - 1) * 2;
        cout << ans;
        if (i != n - 1) {
            cout << '\n';
        }
    }
}
