//30
#include <bits/stdc++.h>
#include <math.h>
using namespace std;
#define int long long

int n, m;
int arr[100010];

bool good(int k) {
    int a = 1, cur = 0;
    for (int i = 0; i < k; i++) {
        if (arr[i] > k) {
            return false;
        }
        if (cur + arr[i] <= k) {
            cur += arr[i];
        } else {
            cur = arr[i];
            a++;
        }
    }
    if (a <= m) {
        return true;
    } else {
        return false;
    }
}

main() {
    int total = 0;
    cin >> n >> m;
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
        total += arr[i];
    }

    int min = 0, max = total;
    while (max - min > 1) {
        int avg = (min + max) / 2;
        if (good(avg)) {
            max = avg;
        } else {
            min = avg;
        }
    }
    cout << max;
}
