#include <bits/stdc++.h>
using namespace std;

int32_t main() {
	ios_base::sync_with_stdio(0); cin.tie(0); cout.tie(0);
	long long n, m, potato = 0;
	cin >> n >> m;
	char farm[1000][1000];

	for (int i = 0; i < n; i++) {
		for (int p = 0; p < m; p++) {
			cin >> farm[i][p];
			if (farm[i][p] == '#') potato++;
		}
	}
	cout << potato;
}
