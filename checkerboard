#include <bits/stdc++.h>
using namespace std;
int main() {
    int long long n;
    cin >> n;
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++){
            if (i%2==0) {
                if (j%2==1) {
                    cout << "x";
                } else if (j%2==0) {
                    cout << "o";
                }
                if (j==n-1) {
                    cout << "\n";
                }
            } else if (i%2==1) {
                if (j%2==1) {
                    cout << "o";
                } else if (j%2==0) {
                    cout << "x";
                }
                if (j==n-1) {
                    cout << "\n";
                }
            }
        }
    }
}
