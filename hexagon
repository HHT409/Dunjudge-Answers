#include <bits/stdc++.h>
using namespace std;
#define int long long

int32_t main() {
    int n;
    cin >> n;
    for (int i = 1; i < n + 1; i++) {
        for (int j = 0; j < n - i; j++) {
            cout << " ";
        }
        for (int j = 0; j < n + 2 * i - 2; j++) {
            cout << "x";
        }
        cout << "\n";
    }
    for (int i = 1; i < n; i++) {
        for (int j = 0; j < i; j++) {
            cout << " ";
        }
        for (int j = 0; j < 3 * n - 2 * i - 2; j++) {
            cout << "x";
        }
        cout << "\n";
    }
}
